    <xacro:macro name="cylinder_inertia" params="r l mass">
    <xacro:property name="calc_cylinder_mass" value="${density*(pi*(r**2)*l)}"/>
    <mass value="${mass}"/>
      <inertia  ixx="${mass*(3*r*r+l*l)/12}" ixy = "0" ixz = "0"
                iyy="${mass*(3*r*r+l*l)/12}" iyz = "0"
                izz="${mass*(r*r)/2}" />
    </xacro:macro>

<xacro:macro name="link_inertia" params="length width height">
<xacro:property name="calc_mass" value="${density*(length*width*height)}"/>
<mass value="${calc_mass}"/>

  <inertia ixx="${(calc_mass/12)*(length**2 + height**2)}" ixy="0.0" ixz="0.0" iyy="${(calc_mass/12)*(width**2 + height**2)}" iyz="0.0" izz="${(calc_mass/12)*(width**2 + length**2)}"/>

</xacro:macro>

  <xacro:macro name="steering_link" params="name">
      <link name="${name}">

        <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
          <mass value="0.5"/>
          <inertia ixx="0.0008333" ixy="0.0" ixz="0.0008333" iyy="0.0" iyz="0.0" izz="0.0008333"/>

        </inertial>

        <collision>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
            <box size="0.1 0.1 0.1"/>
          </geometry>

        </collision>

        <visual>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
            <box size="0.05 0.05 0.05"/>
          </geometry>
        </visual>


        </link>
    

    </xacro:macro>

    <xacro:macro name="steering_joint" params="name child origin_xyz">
    <joint name="${name}" type="continuous">
            <origin rpy="0 0 0" xyz="${origin_xyz}"/>
        <child link="${child}"/>
        <parent link="origin"/>
        <axis rpy="0 0 0" xyz="0 0 1"/>

        <joint_properties damping="1.0" friction="1.0"/>
      </joint>

      <transmission name="${name}_steering_trans" type="SimpleTransmission">
			<type>transmission_interface/SimpleTransmission</type>
			<actuator name="${name}_steering_motor">
				<mechanicalReduction>1</mechanicalReduction>
			</actuator>
			<joint name="${name}">
				<hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
			</joint>
		</transmission>
    </xacro:macro>



</robot>